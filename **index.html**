<script>
const WEB_APP_URL = "https://script.google.com/macros/s/AKfycbydQhfx5nIMbGbvzMRMxsivdQpDCW6CI1A3B|fXTf_UVRwBWpufyoyBcPtNhq/exec";

function sendOrder(product, formId, price) {
  const nameInput = document.getElementById(formId + 'Name');
  const phoneInput = document.getElementById(formId + 'Phone');
  const btn = document.getElementById('submitBtn');

  const name = nameInput.value.trim();
  const phone = phoneInput.value.trim();

  if (!name) {
    alert("Ismingizni kiriting!");
    return;
  }

  if (!/^\+998\d{9}$/.test(phone)) {
    alert("Telefon raqami +998901234567 formatida bo'lishi kerak!");
    return;
  }

  btn.disabled = true;
  btn.textContent = "YUBORILMOQDA...";

  fetch(WEB_APP_URL, {
    method: "POST",
    mode: "no-cors",
    headers: {
      "Content-Type": "application/json"
    },
    body: JSON.stringify({
      name: name,
      phone: phone,
      product: product,
      price: price,
      lang: "uz"
    })
  })
  .then(() => {
    alert("âœ… Buyurtma muvaffaqiyatli yuborildi! Tez orada aloqaga chiqamiz.");
    nameInput.value = "";
    phoneInput.value = "";
  })
  .catch(() => {
    alert("âŒ Xatolik yuz berdi. Internet aloqangizni tekshiring yoki keyinroq urinib ko'ring.");
  })
  .finally(() => {
    btn.disabled = false;
    btn.textContent = "BUYURTMA BERISH (399K)";
  });
}
</script>

