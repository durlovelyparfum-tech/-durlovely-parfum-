<script>
let WEB_APP_URL = 'https://script.google.com/macros/s/YOUR_WEB_APP_ID/exec';

function sendOrder(product, formId, price) {
    const name = document.getElementById(formId + 'Name').value.trim();
    const phone = document.getElementById(formId + 'Phone').value.trim();
    
    if (!name || !phone || !phone.match(/^\+998[0-9]{9}$/)) {
        alert('âŒ Ism va to\'g\'ri telefon raqamni kiriting (+998901234567)');
        return;
    }
    
    const message = `ðŸ†• DURLOVELY BUYURTMA!\n\nðŸ‘¤ ${name}\nðŸ“ž ${phone}\nðŸ›ï¸ ${product}\nðŸ’° ${price} so'm\n\n@durlovely_bot`;
    const url = `https://t.me/share/url?url=https://durlovelyparfum-tech.github.io/-durlovely-parfum-&text=${encodeURIComponent(message)}`;
    window.open(url, '_blank');
    
    document.getElementById(formId + 'Name').value = '';
    document.getElementById(formId + 'Phone').value = '';
    
    alert('âœ… Buyurtma yuborildi! Tez orada bog\'lanamiz â˜Žï¸');
}

// Search functionality
document.getElementById('searchInput')?.addEventListener('input', function(e) {
    const cards = document.querySelectorAll('main > div');
    const query = e.target.value.toLowerCase();
    cards.forEach(card => {
        const text = card.textContent.toLowerCase();
        card.style.display = text.includes(query) ? 'block' : 'none';
    });
});
</script>

