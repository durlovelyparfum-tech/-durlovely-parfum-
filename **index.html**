<script>
// To'g'rilangan Google Script URL
const WEB_APP_URL = "https://script.google.com/macros/s/AKfycbydQhfx5nIMbGbvzMRMxsivdQpDCW6CI1A3B/exec";

// Telefon raqami nazorati
const phoneInput = document.getElementById('phone');
phoneInput.addEventListener('input', (e) => {
    if (!e.target.value.startsWith('+998')) {
        e.target.value = '+998';
    }
});

function sendToSheet() {
  const name = document.getElementById('name').value.trim();
  const phone = document.getElementById('phone').value.trim();
  const btn = document.getElementById('submitBtn');

  if (name.length < 3) {
    alert("Iltimos, ismingizni kiriting!");
    return;
  }
  if (!/^\+998\d{9}$/.test(phone)) {
    alert("Telefon raqami noto'g'ri!");
    return;
  }

  // Tugmani yuklanish holatiga o'tkazish
  btn.disabled = true;
  const originalText = btn.innerText;
  btn.innerText = "YUBORILMOQDA...";

  // Google Scriptga ma'lumot yuborish (FormData orqali)
  const formData = new FormData();
  formData.append('name', name);
  formData.append('phone', phone);
  formData.append('product', 'DURLOVELY Signature');
  formData.append('price', '399 000');

  fetch(WEB_APP_URL, {
    method: "POST",
    mode: "no-cors", 
    body: formData
  })
  .then(() => {
    alert("âœ… Rahmat! Buyurtmangiz qabul qilindi. Tez orada bog'lanamiz.");
    document.getElementById('name').value = "";
    document.getElementById('phone').value = "+998";
  })
  .catch(err => {
    alert("âŒ Xatolik yuz berdi. Internetni tekshiring.");
    console.error(err);
  })
  .finally(() => {
    btn.disabled = false;
    btn.innerText = originalText;
  });
}
</script>

