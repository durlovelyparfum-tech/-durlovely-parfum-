<script>
const WEB_APP_URL = "https://script.google.com/macros/s/AKfycbydQhfx5nIMbGbvzMRMxsivdQpDCW6CI1A3B%7CfXTf_UVRwBWpufyoyBcPtNhq";

function sendOrder(product, formId, price) {
  const name = document.getElementById(formId + 'Name').value.trim();
  const phone = document.getElementById(formId + 'Phone').value.trim();

  if (!name || !phone || !phone.match(/^\\+998\\d{9}$/)) {
    alert("‚ùå Telefon formati: +998901234567");
    return;
  }

  fetch(WEB_APP_URL, {
    method: "POST",
    body: JSON.stringify({
      name: name,
      phone: phone,
      product: product,
      price: price,
      lang: "uz"
    })
  })
  .then(r => r.json())
  .then(() => {
    alert("‚úÖ Buyurtma yuborildi!");
    document.getElementById(formId + 'Name').value = "";
    document.getElementById(formId + 'Phone').value = "";
  })
  .catch(() => alert("‚ùå Server xatosi"));
}
</script>

